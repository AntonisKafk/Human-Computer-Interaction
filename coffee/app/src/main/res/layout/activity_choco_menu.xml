<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3c6a8"
    tools:context=".Choco_Menu">

    <TextView
        android:id="@+id/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ΡΟΦΗΜΑΤΑ"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <Button
        android:id="@+id/straw"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/cardview_light_background"
        android:onClick="showStrawberry"
        android:text="STRAWBERRY ICECREAM"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toEndOf="@+id/arabica"
        app:layout_constraintTop_toBottomOf="@+id/menu_text"
        app:layout_constraintVertical_bias="0.119" />

    <Button
        android:id="@+id/doubledose"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/cardview_light_background"
        android:onClick="showCaramelPeanut"
        android:text="CARAMEL PEANUT"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toEndOf="@+id/single"
        app:layout_constraintTop_toBottomOf="@+id/start"
        app:layout_constraintVertical_bias="0.11" />

    <Button
        android:id="@+id/single"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/cardview_light_background"
        android:onClick="showCinnamonCandy"
        android:text="CINNAMON CANDY"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intenso"
        app:layout_constraintVertical_bias="0.104" />

    <Button
        android:id="@+id/peru"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/cardview_light_background"
        android:onClick="showAlmondVanilla"
        android:text="ALMOND VANILLA"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doubledose"
        app:layout_constraintVertical_bias="0.12" />

    <Button
        android:id="@+id/arabica"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/cardview_light_background"
        android:onClick="showChoco"
        android:text="CHOCOLATE"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_text"
        app:layout_constraintVertical_bias="0.119" />

    <Button
        android:id="@+id/start"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/cardview_light_background"
        android:onClick="showCaramelCookie"
        android:text="CARAMEL COOKIE"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toEndOf="@+id/intenso"
        app:layout_constraintTop_toBottomOf="@+id/straw"
        app:layout_constraintVertical_bias="0.082" />

    <Button
        android:id="@+id/intenso"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/cardview_light_background"
        android:onClick="showAppleVanilla"
        android:text="APPLE VANILLA"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arabica"
        app:layout_constraintVertical_bias="0.083" />

</androidx.constraintlayout.widget.ConstraintLayout>