<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#e3c6a8"
tools:context=".Americano">

<Button
    android:id="@+id/start"
    android:layout_width="129dp"
    android:layout_height="61dp"
    android:backgroundTint="#9ebf86"
    android:onClick="showLoading"
    android:text=">"
    android:textColor="#f4f5f0"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/single"
    app:layout_constraintVertical_bias="0.253" />

<Button
    android:id="@+id/doubledose"
    android:layout_width="129dp"
    android:layout_height="61dp"
    android:layout_marginEnd="24dp"
    android:backgroundTint="@color/button_background"
    android:text="ΔΙΠΛΟΣ"
    android:textColor="@color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.822"
    app:layout_constraintStart_toEndOf="@+id/single"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.339" />

<TextView
    android:id="@+id/menu_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="AMERICANO"
    android:textColor="@color/black"
    android:textSize="30sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.173" />

<Button
    android:id="@+id/single"
    android:layout_width="129dp"
    android:layout_height="61dp"
    android:backgroundTint="@color/button_background"
    android:text="ΜΟΝΟΣ"
    android:textColor="@color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.117"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.34" />

</androidx.constraintlayout.widget.ConstraintLayout>