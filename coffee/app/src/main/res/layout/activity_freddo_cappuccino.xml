<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3c6a8"
    tools:context=".Freddo_Cappuccino" >

    <Button
        android:id="@+id/peru"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/button_background"
        android:text="PERU"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/intenso"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_text"
        app:layout_constraintVertical_bias="0.122" />

    <Button
        android:id="@+id/start"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:backgroundTint="#9ebf86"
        android:onClick="showLoading"
        android:text=">"
        android:textColor="#f4f5f0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single"
        app:layout_constraintVertical_bias="0.178" />

    <Button
        android:id="@+id/doubledose"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/button_background"
        android:text="ΔΙΠΛΟΣ"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toEndOf="@+id/single"
        app:layout_constraintTop_toBottomOf="@+id/arabica"
        app:layout_constraintVertical_bias="0.113" />

    <TextView
        android:id="@+id/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Freddo Cappuccino"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <Button
        android:id="@+id/arabica"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/button_background"
        android:text="ARABICA"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toEndOf="@+id/intenso"
        app:layout_constraintTop_toBottomOf="@+id/menu_text"
        app:layout_constraintVertical_bias="0.122" />

    <Button
        android:id="@+id/single"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/button_background"
        android:text="ΜΟΝΟΣ"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/peru"
        app:layout_constraintVertical_bias="0.111" />

    <Button
        android:id="@+id/intenso"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/button_background"
        android:text="INTENSO"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_text"
        app:layout_constraintVertical_bias="0.122" />

</androidx.constraintlayout.widget.ConstraintLayout>